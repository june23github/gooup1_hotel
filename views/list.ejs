<!DOCTYPE html>
<html>
<head>
  <title>Hotels List</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Hotels List</h1>
    <a class="btn btn-success" href="/hotels/new">Create New Hotel</a>
    <table class="table mt-3">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% hotels.forEach(hotel => { %>
          <tr>
            <td><%= hotel.name %></td>
            <td><%= hotel.price %></td>
            <td>
              <a class="btn btn-primary" href="/hotels/edit/<%= hotel.id %>">Edit</a>
              <form action="/hotels/delete/<%= hotel.id %>" method="POST" style="display:inline;">
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this hotel?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
