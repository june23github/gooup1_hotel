<!DOCTYPE html>
<html>
<head>
  <title>Hotels List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Hotels List</h1>
  <a href="/hotels/new">Create New Hotel</a>
  <ul>
    <% hotels.forEach(hotel => { %>
      <li>
        <%= hotel.name %> - <%= hotel.price %>
        <a href="/hotels/edit/<%= hotel.id %>">Edit</a>
        <form action="/hotels/delete/<%= hotel.id %>" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this hotel?')">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
